<div class="page-header">
  <%= link_to groups_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_group_path(@group), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%=@group.name%></h1>
</div>

<dl class="dl-horizontal">
  <!-- <dt>Name:</dt>
  <dd><%= @group.name %></dd> -->

  <dt>Description:</dt>
  <dd><%= @group.description %></dd>
  <div class="page-header">
    <%= link_to new_event_path(@group), class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Album
    <% end %>
    <h3>Listing Albums</h3>
  </div>

</br>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <!-- <th>Group</th> -->
            <th>Name</th>
            <th>Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @events) do |event| %>
            <!-- <td><%= event.group %></td> -->
            <td><%= event.name %></td>
            <td><%= event.description %></td>
            <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>



</dl>
