<div class="page-header">
  <%= link_to edit_group_path(@group), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_group_path(@group), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show group</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @group.name %></dd>

  <dt>Description:</dt>
  <dd><%= @group.description %></dd>
  <a href ="<%= new_event_path(@group) %>"> Add Event </a>
</br>
<p> Events: </p>
<dl>
  <% @events.each do |e| %>
    <a href ="<%= event_path(e) %>"><%= e.name %></a>
    </br>
  <% end %>
</dl>
</dl>
