<div class="page-header">
  <%= link_to group_path(@event.group_id), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_event_path(@event), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show event</h1>
</div>

<dl class="dl-horizontal">
  <dt>Group:</dt>
  <dd><%= @event.group.name %></dd>

  <dt>Name:</dt>
  <dd><%= @event.name %></dd>

  <dt>Description:</dt>
  <dd><%= @event.description %></dd>

  <a href ="<%= new_upload_path(@event) %>" > Upload photos </a>

</dl>
